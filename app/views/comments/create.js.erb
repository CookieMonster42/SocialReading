function refreshForm(innerHTML) {
  const newCommentForm = document.getElementById("new_comment");
  newCommentForm.innerHTML = innerHTML;
}

function addComment(commentHTML) {
  const comments = document.getElementById("comments");
  comments.insertAdjacentHTML('afterbegin', commentHTML);
}

<% if @comment.errors.any? %>
  refreshForm('<%= j render "comments/form", group: @group, comment: @comment %>');
<% else %>
  addComment('<%= j render "comments/show", comment: @comment %>');
  refreshForm('<%= j render "comments/form", group: @group, comment: Comment.new %>');
<% end %>
