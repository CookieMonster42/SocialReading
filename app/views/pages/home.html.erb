<body class="background-img">
  <%= render "shared/navbar_light" %>
  <div class="container py-3 mt-5">
    <div class="d-flex flex-column mt-5">
      <h1 class="d-flex justify-content-center landing-page-header">Read, Meet, Repeat <br /> Find book groups near you...</h1>
      <div class="home-card">
        <form action="/groups">
          <div class="search-bar-home ">
            <input type="text" placeholder="Type a city" name="query" class="home-input-field" autocomplete="off">
            <input type="hidden" name="range" value="<%= params[:range] || '' %>">
            <input type="hidden" name="language" value="<%= params[:language] || '' %>">
            <input type="hidden" name="tags" value="<%= params[:tags] || '' %>">
            <div class="btn-align-bottom">
              <button type="submit" class="btn-regular">Search</button>
            </div>
          </div>
        </form>
      </div>
    </div>
</body>
