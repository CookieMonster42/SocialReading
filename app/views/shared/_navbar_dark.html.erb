<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
      <p class="logo-dark">Read-and-Share</p>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
       <!--  <li class="nav-item active">
          <%#= link_to "Home", user_path(current_user), class: "nav-link" %>
        </li> -->

        <li class="nav-item">
          <%= link_to "Create a Group", new_group_path, class: "nav-link link-dark" %>
        </li>

        <li class="nav-item">
          <%= link_to "Find a Group", groups_path, class: "nav-link link-dark", style: "margin-right: 0.5rem" %>
        </li>

        <!-- <li class="nav-item dropdown"> -->
        <% if current_user[:photo] %>
          <%= image_tag current_user.photo, height: 40, width: 40, crop: :fill, class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= image_tag "profile_placeholder.png", class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right dp-down-r" aria-labelledby="navbarDropdown">

          <%= link_to "My Profile", user_path(current_user), class: "dropdown-item" %>

          <%#= link_to "", root_path, class: "dropdown-item" %>
          <%#= link_to "My Account", user_path(current_user), class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      <!-- </li> -->

      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
